@model StoreTicket.Models.PassionuserDto

@{
    ViewBag.Title = "Edit";
}


<div class="back-list">
    <a href="/User/List">Go Back To User List</a>
    <p> / </p>
    <a href="/User/Details/@Model.UserId">Go Back To Details</a>
</div>
<h2 class="create-title">Update User For @Model.UserFirstName @Model.UserLastName</h2>
<div class="form-wrapper">
    <form class="form-floating" action="/User/Update/@Model.UserId" method="POST">
        <div class="input-wrapper">
            <div style="display:none;">
                @* Pass through the User ID *@
                <input type="text" name="UserID" value="@Model.UserId" />
            </div>
            <div class="form-floating">
                <label for="floatingInputValue">Name:</label>
                <input class="form-control" id="floatingInputValue" type="text" name="UserFirstName" value="@Model.UserFirstName" />
            </div>
            <div>
                <label for="floatingInputValue">Last Name:</label>
                <input class="form-control" id="floatingInputValue" type="text" name="UserLastName" value="@Model.UserLastName" />
            </div>
            <div>
                <label for="floatingInputValue">Account ID:</label>
                <input class="form-control" id="floatingInputValue" type="text" name="AccountName" value="@Model.AccountName" />
            </div>
            <div>
                <label for="floatingInputValue">Phone:</label>
                <input class="form-control" id="floatingInputValue" type="tel" name="PhoneNnumber" value="@Model.PhoneNnumber" />
            </div>
            <div>
                <label for="floatingInputValue">Email:</label>
                <input class="form-control" id="floatingInputValue" type="email" name="EmailAddress" value="@Model.EmailAddress" />
            </div>
            <div>
                <label for="floatingInputValue">Date of Birth:</label>
                <input class="form-control" id="floatingInputValue" type="text" name="BirthDate" value="@Model.BirthDate" />
            </div>
            <div>
                <input class="btn btn-primary add-button" type="submit" value="Update User" />
            </div>
        </div>
    </form>
</div>


