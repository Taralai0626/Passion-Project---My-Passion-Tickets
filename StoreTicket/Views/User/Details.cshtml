@model StoreTicket.Models.ViewModels.DetailsUser
@{
    ViewBag.Title = "View";
}
<h2 class="list-title">Details for @Model.SelectedUser.UserFirstName @Model.SelectedUser.UserLastName</h2>
<div class="option-list">
    <a href="/User/List">Go Back To List</a>
    <p> > </p>
    <a href="/User/Edit/@Model.SelectedUser.UserId">Update</a>
</div>
<div class="content-wrapper">
    <div class="detail-wrapper">
        <div class="ticket-delete">
            <a href="/User/DeleteConfirm/@Model.SelectedUser.UserId">Delete</a>
        </div>
        <h3><strong>@Model.SelectedUser.UserFirstName @Model.SelectedUser.UserLastName</strong></h3>
        <h4><strong>Account Name: </strong>@Model.SelectedUser.AccountName</h4>
        <h4><strong>Phone: </strong> @Model.SelectedUser.PhoneNnumber</h4>
        <h4><strong>Email: </strong> @Model.SelectedUser.EmailAddress</h4>
        <h4><strong>Date of Birth: </strong>@Model.SelectedUser.BirthDate</h4>
    </div>
    <div class="associate-wrapper">
        <div class="associate_tittle">
            <h3>Has Tickets for:</h3>
        </div>
        <div class="listUsers">
            @foreach (var ticket in Model.KeptTickets)
            {
                <a href="/Ticket/Details/@ticket.TicketId">@ticket.EventName</a>
                <br />
            }
        </div>
    </div>
</div>


